{
  "author": "Pablion <36828324+Pablion@users.noreply.github.com>",
  "commitlint": {
    "extends": "@commitlint/config-conventional",
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "ref",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "dependencies": {
    "@types/node": "^17.0.23",
    "algosdk": "^1.15.0",
    "dotenv": "^16.0.0",
    "dotenv-parse-variables": "^2.0.0",
    "express": "^4.17.3",
    "near-api-js": "^0.44.2",
    "typescript": "^4.6.4",
    "zod": "^3.14.4"
  },
  "description": "Unidirectional bridge for Algorand <- NEAR",
  "devDependenciesComment": "json-bigint might not be needed",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/dotenv-parse-variables": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/json-bigint": "^1.0.1",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "json-bigint": "^1.0.0",
    "lint-staged": "^12.4.1",
    "pg": "^8.7.3",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "winston": "^3.7.2"
  },
  "jest": {
    "globalSetup": "./src/utils/test/jest-setup.ts",
    "globalTeardown": "./src/utils/test/jest-teardown.ts",
    "setupFilesAfterEnv": [
      "./src/utils/test/global-beforeAll.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "module": "ESNext",
          "target": "ES2017"
        },
        "useESM": true
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "license": "gpl-3.0",
  "lint-staged": {
    "*.ts": "eslint --cache --fix --max-warnings=0",
    "*.{json,md}": "prettier --write"
  },
  "main": "src/main.ts",
  "name": "algorand-near-bridge",
  "private": true,
  "repository": "git@github.com:AbstrLabs/Algorand-NEAR-bridge.git",
  "scripts": {
    "algo": "yarn test:algo",
    "bridge": "yarn test:bridge",
    "build": "tsc",
    "burn": "yarn test:burn",
    "db": "yarn test:db",
    "dev": "tsnd --respawn src/main.ts --inspector --debug",
    "lint": "eslint . --ext .ts",
    "mint": "yarn test:mint",
    "near": "yarn test:near",
    "postinstall": "husky install",
    "prepare": "husky install",
    "test": "jest",
    "test:algo": "jest --testPathPattern=src/blockchain/algorand",
    "test:bridge": "jest --testPathPattern=src/blockchain/bridge",
    "test:burn": "jest --testPathPattern=src/blockchain/bridge/burn",
    "test:db": "jest --testPathPattern=src/database",
    "test:mint": "jest --testPathPattern=src/blockchain/bridge/mint ",
    "test:near": "jest --testPathPattern=src/blockchain/near",
    "test:util": "jest --testPathPattern=src/utils"
  },
  "version": "1.0.0"
}
