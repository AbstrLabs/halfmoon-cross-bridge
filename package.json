{
  "author": "Pablion <36828324+Pablion@users.noreply.github.com>",
  "commitlint": {
    "extends": "@commitlint/config-conventional",
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "ref",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "dependencies": {
    "@types/node": "^17.0.23",
    "algosdk": "^1.15.0",
    "dotenv": "^16.0.0",
    "dotenv-parse-variables": "^2.0.0",
    "ejs": "^3.1.8",
    "express": "^4.17.3",
    "near-api-js": "^0.44.2",
    "typescript": "^4.6.4",
    "zod": "^3.14.4"
  },
  "description": "Unidirectional bridge for Algorand <- NEAR",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@playwright/test": "^1.22.2",
    "@types/dotenv-parse-variables": "^2.0.1",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/json-bigint": "^1.0.1",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.16.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "json-bigint": "^1.0.0",
    "lint-staged": "^12.4.1",
    "pg": "^8.7.3",
    "playwright": "^1.22.2",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "winston": "^3.7.2"
  },
  "devDependencies-COMMENT": "json-bigint might not be needed",
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig.eslint.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true
  },
  "eslintConfig.env.node-COMMENT": "https://stackoverflow.com/questions/49789177/module-is-not-defined-and-process-is-not-defined-in-eslint-in-visual-studio-code",
  "jest": {
    "globalSetup": "./src/utils/test/jest-setup.ts",
    "globalTeardown": "./src/utils/test/jest-teardown.ts",
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "module": "ESNext",
          "target": "ESNext"
        },
        "useESM": false
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/src/integration-test/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./src/utils/test/global-beforeAll.ts"
    ],
    "testEnvironment": "node"
  },
  "license": "gpl-3.0",
  "lint-staged": {
    "*.ts": "eslint --cache --fix --max-warnings=0",
    "*.{json,md}": "prettier --write"
  },
  "main": "src/main.ts",
  "name": "algorand-near-bridge",
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "private": true,
  "repository": "git@github.com:AbstrLabs/Algorand-NEAR-bridge.git",
  "scripts": {
    "algo": "yarn test:algo",
    "bridge": "yarn test:bridge",
    "build": "tsc",
    "db": "yarn test:db",
    "dev": "tsnd --respawn src/main.ts --inspector --debug",
    "handler": "yarn test:handler",
    "int": "yarn integration-test",
    "integration-test": "playwright test ./src/integration-test/",
    "lint": "eslint . --ext .ts",
    "near": "yarn test:near",
    "postinstall": "husky install",
    "prepare": "husky install",
    "test": "jest",
    "test:algo": "jest --testPathPattern=src/blockchain/algorand",
    "test:bridge": "jest --testPathPattern=src/bridge",
    "test:db": "jest --testPathPattern=src/database",
    "test:handler": "jest --testPathPattern=src/bridge/txn-handler",
    "test:near": "jest --testPathPattern=src/blockchain/near",
    "test:transact": "jest --testPathPattern=src/bridge/transact",
    "test:util": "jest --testPathPattern=src/utils",
    "tx": "yarn test:transact"
  },
  "version": "0.1.1"
}
