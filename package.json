{
  "author": "Pablion <36828324+Pablion@users.noreply.github.com>",
  "commitlint": {
    "extends": "@commitlint/config-conventional",
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "ref",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "dependencies": {
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.23",
    "algosdk": "^1.15.0",
    "axios": "^0.27.2",
    "bignumber.js": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "dotenv-parse-variables": "^2.0.0",
    "express": "^4.17.3",
    "lodash": "^4.17.21",
    "near-api-js": "^0.44.2",
    "object-set-type": "^2.2.1",
    "typedoc": "^0.23.7",
    "typescript": "^4.6.4",
    "zod": "^3.14.4"
  },
  "description": "Unidirectional bridge for Algorand <- NEAR",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/cors": "^2.8.12",
    "@types/dotenv-parse-variables": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/json-bigint": "^1.0.1",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.16.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "json-bigint": "^1.0.0",
    "lint-staged": "^12.4.1",
    "pg": "^8.7.3",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "winston": "^3.7.2"
  },
  "devDependencies-COMMENT": "json-bigint might not be needed",
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig.eslint.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "root": true,
    "rules": {
      "tsdoc/syntax": "error"
    }
  },
  "eslintConfig.env.node-COMMENT": "https://stackoverflow.com/questions/49789177/module-is-not-defined-and-process-is-not-defined-in-eslint-in-visual-studio-code",
  "jest": {
    "globalSetup": "./src/test/test-helper/jest-setup.ts",
    "globalTeardown": "./src/test/test-helper/jest-teardown.ts",
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "module": "ESNext",
          "target": "ESNext"
        },
        "useESM": false
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./src/test/test-helper/global-beforeAll.ts"
    ],
    "testEnvironment": "node"
  },
  "license": "gpl-3.0",
  "lint-staged": {
    "*.ts": "eslint --cache --fix --max-warnings=0",
    "*.{json,md}": "prettier --write"
  },
  "main": "src/main.ts",
  "name": "algorand-near-bridge",
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "private": true,
  "repository": "git@github.com:AbstrLabs/Algorand-NEAR-bridge.git",
  "scripts": {
    "algo": "yarn test:algo",
    "bridge": "yarn test:bridge",
    "build": "tsc",
    "db": "yarn test:db",
    "dev": "tsnd --respawn src/main.ts --inspector --debug",
    "doc": "yarn typedoc src/* --logLevel Error --out ./TSDoc",
    "handler": "yarn test:handler",
    "int": "yarn test:integration-test",
    "int:ci": "yarn test:integration-test-on-ci",
    "lint": "eslint . --ext .ts",
    "near": "yarn test:near",
    "prepare": "husky install",
    "start": "NODE_ENV=production ts-node src/main.ts",
    "test": "yarn test:unit-test # disabled: ; yarn test:integration-test",
    "test:algo": "jest src/blockchain/algorand",
    "test:bridge": "jest src/bridge",
    "test:db": "jest src/database",
    "test:handler": "jest src/bridge/txn-handler",
    "test:integration-test": "jest src/test/integration-test",
    "test:integration-on-ci": "yarn dev & jest src/test/integration-test ; pkill -fn yarn dev",
    "test:near": "jest src/blockchain/near",
    "test:unit-test": "jest --testPathIgnorePatterns=src/test",
    "test:util": "jest src/utils",
    "unit": "yarn test:unit-test",
    "unit-test": "yarn test:unit-test",
    "util": "yarn test:util"
  },
  "version": "0.2.0"
}
